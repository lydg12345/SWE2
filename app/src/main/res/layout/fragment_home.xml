<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="160dp"
                android:layout_marginTop="72dp"
                app:srcCompat="@mipmap/apartment1" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButton"
                android:layout_alignParentStart="true"
                android:layout_marginStart="160dp"
                android:layout_marginTop="72dp"
                app:srcCompat="@mipmap/apartment2" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButton2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="160dp"
                android:layout_marginTop="72dp"
                app:srcCompat="@mipmap/apartment3" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButton3"
                android:layout_alignParentStart="true"
                android:layout_marginStart="160dp"
                android:layout_marginTop="72dp"
                app:srcCompat="@mipmap/apartment4" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButton4"
                android:layout_alignParentStart="true"
                android:layout_marginStart="160dp"
                android:layout_marginTop="72dp"
                app:srcCompat="@mipmap/apartment5" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButton5"
                android:layout_alignParentStart="true"
                android:layout_marginStart="160dp"
                android:layout_marginTop="72dp"
                app:srcCompat="@mipmap/apartment6" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButton6"
                android:layout_alignParentStart="true"
                android:layout_marginStart="160dp"
                android:layout_marginTop="72dp"
                app:srcCompat="@mipmap/apartment7" />

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButton7"
                android:layout_alignParentStart="true"
                android:layout_marginStart="160dp"
                android:layout_marginTop="72dp"
                app:srcCompat="@mipmap/apartment8" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>